		<HBox fx:id="scaleCurvesRow">
			<children>
				<CheckBox fx:id="scaleCurvesCheckBox" />
				<Label text=" Scale Curves to Fit?"/>
			</children>
		</HBox>
		
	</VBox>

	<VBox fx:id="canvasBox" />

